rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User profile photos - only owner can write, all authenticated users can read
    match /users/{userId}/profile.jpg {
      // Allow read for all authenticated users (for displaying profile photos)
      allow read: if request.auth != null;
      
      // Only the owner can write/update their profile photo
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024  // 5MB limit
        && request.resource.contentType.matches('image/.*');
      
      // Only the owner can delete their profile photo
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}




